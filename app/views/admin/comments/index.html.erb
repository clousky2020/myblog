<div class="row admin-article-comments">
  <h1>评论管理</h1>
  <table class="table table-hover table-active table-striped">
    <thead>
    <tr>
      <td>名字</td>
      <td>邮箱</td>
      <td>内容</td>
      <td>创建时间</td>
      <td>操作</td>
    </tr>
    </thead>
    <tbody>
    <% @comments.each do |comment| %>
      <tr>
        <td><%= comment.name %></td>
        <td><%= comment.email %></td>
        <td><%= simple_format comment.content %></td>
        <td><%= comment.created_at.strftime("%Y-%m-%d %H:%M") %></td>
        <td><%= link_to "跳转回复", article_path(@article) %></td>
        <td><%= link_to "删除", admin_article_comment_path(@article, comment), method: :delete, data: {confirm: "确定删除?"} %></td>
      </tr>
    <% end %>
    </tbody>
  </table>

</div>