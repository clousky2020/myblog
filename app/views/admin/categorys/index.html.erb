<h1>博客分类管理</h1>
<p><%= link_to "新建分类", new_admin_category_path, class: "btn btn-primary" %></p>

<hr>
<table class="table table-hover table-active table-striped" style="margin: auto;">
  <thead>
  <tr>
    <td>分类名称</td>
    <td>操作</td>
  </tr>
  </thead>
  <tbody>
  <% @categorys.each do |category| %>
    <tr>
      <td><%= category.name %></td>
      <td><%= link_to "删除", admin_category_path(category), method: :delete, data: {confirm: "确定删除?"} %></td>
    </tr>
  <% end %>
  </tbody>
</table>
