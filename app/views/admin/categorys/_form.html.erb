<div class="col-12">
  <%= form_for @category, url: yield(:url) do |f| %>
    <%= render 'shard/error_messages', object: f.object %>
    <p>
      <%= f.label :name, "名称" %><br>
      <%= f.text_field :name, class: "form-control" %>
    </p>
    <div align="right">
      <%= f.submit yield(:button_text), class: "btn btn-primary" %>
    </div>
  <% end %>
</div>


