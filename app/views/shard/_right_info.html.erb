<div id="right_comments">
  <h3>最新的评论</h3>
  <% comments.each do |comment| %>
    <div class="comments_content">
      <%= truncate comment.content, length: 20 %><br>
      --- <%= link_to comment.article.title, article_path(comment.article) %>
    </div>
  <% end %>
</div>

<hr>
<div id="categories">
  <h3>分类筛选</h3>
  <div class="row">
    <% @categories.each do |f| %>
      <div class="category-item "><%= f %></div>
    <% end %>
  </div>
</div>
<hr>

<div id="tag_list ">
  <h3>标签筛选</h3>
  <div class="row">
    <% @labels.each do |f| %>
      <span class="tag_item "><%= f %></span>
    <% end %>
  </div>
</div>
<hr>

<div id="popular_articles col-12">
  <h3>最受欢迎的文章</h3>
  <div class="row">
    <% @popular_articles.each do |f| %>
      <span class="tag_item "><%= link_to f.title,article_path(f) %></span>
    <% end %>
  </div>
</div>





