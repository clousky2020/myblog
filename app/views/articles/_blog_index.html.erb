<div id="blog_index">
  <% if articles.length == 0 %>
    <div class="small-12 large-8 columns">
      <h1>
        没有找到文章。
      </h1>
    </div>
  <% else %>
    <div>
      <% articles.each do |article| %>
        <div id="blog_info" class="small-12 large-8 columns">
          <h2 class="blog-title"><%= link_to article.title, article_path(article) %></h2>
          <p class="blog_ptag pre">
            <% if article.categories.any? %>
              <span>分类:<%= article.categories.first.name %></span>
            <% end %>
            <span><%= article.updated_at.strftime('%Y-%m-%d %H:%M:%S') %></span>
            <span>
                <%= fa_icon "tag" %>
              <%= article.labels.map {|i| i.name}.join(",") %>
              </span>
          </p>
          <p class="blog_content"><%= truncate(article.content, escape: false, :length => 50) %></p>
          <hr>
        </div>
      <% end %>
    </div>
    <div class="pagination"><%= paginate articles %></div>
  <% end %>
</div>
