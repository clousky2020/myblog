<div class="container">
  <div class="col-4 offset-4">
    <h1>注册新企业用户</h1>
    <%= form_for(:company_user,url: recruitment_company_register_index_path) do |f| %>
      <div class="field">
        <%= f.label :company_name, "用户名" %><br/>
        <%= f.text_field :company_name, autofocus: true, autocomplete: "name", class: "form-control" %>
      </div>
      <div class="field">
        <%= f.label :company_email, "邮箱" %><br/>
        <%= f.email_field :company_email, autofocus: true, autocomplete: "email", class: "form-control" %>
      </div>

      <div class="field">
        <%= f.label :password, "密码" %><br/>
        <%= f.password_field :password, autocomplete: "current-password", class: "form-control" %>
      </div>
      <div class="field">
        <%= f.label :password_confirmation, "确认密码" %><br/>
        <%= f.password_field :password_confirmation, autocomplete: "current-password", class: "form-control" %>
      </div>
      <div class="actions text-center">
        <%= f.submit '企业注册', class: "btn btn-primary " %>
      </div>

    <% end %>
  </div>
</div>